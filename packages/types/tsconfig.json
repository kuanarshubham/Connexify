{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    
    /* ðŸŸ¢ CRITICAL CONFIGURATION FIX */
    "noEmit": false,
    "allowImportingTsExtensions": false,  // MUST BE FALSE when emitting files
    "declaration": true,
    "declarationMap": true,
    
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"]
}